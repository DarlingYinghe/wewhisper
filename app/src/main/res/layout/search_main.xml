<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <View
        android:id="@+id/search_title_bg"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/color_g_blue1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_title"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:paddingLeft="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:hint="@string/search"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/bg_search_edit"
        app:layout_constraintBottom_toBottomOf="@id/search_title_bg"
        app:layout_constraintLeft_toLeftOf="@id/search_title_bg"
        app:layout_constraintRight_toRightOf="@id/search_title_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"/>



    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/search"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/search_title"
        app:layout_constraintLeft_toLeftOf="@id/search_title"
        app:layout_constraintTop_toTopOf="@id/search_title" />

    <ImageView
        android:id="@+id/iv_menu_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/add"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/search_title"
        app:layout_constraintLeft_toRightOf="@id/search_title"
        app:layout_constraintTop_toTopOf="@id/search_title"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
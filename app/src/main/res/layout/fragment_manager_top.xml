<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/manager_bg"
        android:layout_width="0dp"
        android:layout_height="184dp"
        android:background="@drawable/color_g_blue1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tiancheng.wewhisper.tools.widgets.UpImageView
        android:id="@+id/manager_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="@id/manager_bg"
        app:layout_constraintLeft_toLeftOf="@id/manager_bg"
        app:layout_constraintTop_toTopOf="@id/manager_bg"
        app:type="circle" />

    <TextView
        android:id="@+id/manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Hello World"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/manager_avatar"
        app:layout_constraintTop_toTopOf="@id/manager_avatar" />

    <TextView
        android:id="@+id/manager_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:text="Hello World"
        android:textColor="@color/cyan1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/manager_avatar"
        app:layout_constraintLeft_toRightOf="@id/manager_avatar" />
</android.support.constraint.ConstraintLayout>
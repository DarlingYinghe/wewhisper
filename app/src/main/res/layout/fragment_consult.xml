<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tiancheng.wewhisper.consult.ConsultFragment">

    <View
        android:id="@+id/consult_title_bg"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/color_g_blue1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/consult_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/consult"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/consult_title_bg"
        app:layout_constraintLeft_toLeftOf="@id/consult_title_bg"
        app:layout_constraintRight_toRightOf="@id/consult_title_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/consult_title_bg">
        <include
            layout="@layout/item_consult" />
        <include
            layout="@layout/item_consult" />
        <include
            layout="@layout/item_consult" />
        <include
            layout="@layout/item_consult" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

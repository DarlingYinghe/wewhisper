<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <com.tiancheng.wewhisper.tools.widgets.UpImageView
        android:id="@+id/item_consult_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type="circle" />

    <TextView
        android:id="@+id/item_consult_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:text="临时昵称"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/item_consult_avatar"
        app:layout_constraintTop_toTopOf="@+id/item_consult_avatar" />

    <TextView
        android:id="@+id/item_consult_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="300dp"
        android:text="消息消息消息消息消息消息消息消息消息消息消息消息消息"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/item_consult_name"
        app:layout_constraintTop_toBottomOf="@+id/item_consult_name" />

</android.support.constraint.ConstraintLayout>